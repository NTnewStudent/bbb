<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculateActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Near Focal Distance"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/nearFocal"
            android:text="Enter all values"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Far Focal Distance"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/farFocal"
            android:text="Enter all values"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Depth of Field"
            android:textSize="14sp"
            android:layout_height="wrap_content"

            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <TextView
            android:id="@+id/dof"
            android:text="Enter all values"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Near Focal Distance"
            android:textSize="14sp"

            android:layout_gravity="center"
            android:layout_height="wrap_content"


            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <TextView
            android:id="@+id/hyperfocalDistance"
            android:text="Enter all values"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Photo details with"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"


            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <TextView
            android:id="@+id/Detail"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Circle of Confusion [m]"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <EditText
            android:id="@+id/coc"
            android:textSize="16sp"
            android:hint="ex:0.029 for 0.029m"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Distance to Subject [m]"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <EditText
            android:id="@+id/subjectDistance"
            android:textSize="16sp"
            android:hint="ex:1.5 for 1.5m"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_width="0dp"
            android:inputType="numberDecimal"

            android:layout_weight="0.5"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Selected aperture [m]"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />
        <EditText
            android:id="@+id/selectAperture"
            android:textSize="16sp"
            android:hint="ex:2.8 for F2.8"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_width="0dp"
            android:inputType="numberDecimal"

            android:layout_weight="0.5"
            />
    </LinearLayout>

   <RelativeLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:layout_alignParentRight="true"
           android:id="@+id/ok"
           android:text="calculator"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>

</LinearLayout>